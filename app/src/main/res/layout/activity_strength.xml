<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="joshwhittle.rpgfitness.Strength">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your max Bench Press?"
        android:id="@+id/textViewStrengthMaxBenchQuestion"
        android:layout_marginTop="37dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextStrengthMaxBenchPress"
        android:layout_below="@+id/textViewStrengthMaxBenchQuestion"
        android:layout_alignLeft="@+id/editTextSrengthMaxSquat"
        android:layout_alignStart="@+id/editTextSrengthMaxSquat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your max Squat?"
        android:id="@+id/textViewStrengthMaxSquatQuestion"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/editTextStrengthMaxBenchPress"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextSrengthMaxSquat"
        android:layout_below="@+id/textViewStrengthMaxSquatQuestion"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your max Deadlift?"
        android:id="@+id/textViewStrengthMaxDeadliftQuestion"
        android:layout_below="@+id/editTextSrengthMaxSquat"
        android:layout_alignLeft="@+id/textViewStrengthMaxSquatQuestion"
        android:layout_alignStart="@+id/textViewStrengthMaxSquatQuestion"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextStrengthMaxDeadlift"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/textViewStrengthMaxDeadliftQuestion"
        android:layout_alignLeft="@+id/textViewStrengthMaxBenchQuestion"
        android:layout_alignStart="@+id/textViewStrengthMaxBenchQuestion" />
</RelativeLayout>
